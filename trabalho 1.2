#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);

    int carneiros[N];
    for (int i = 0; i < N; i++) {
        scanf("%d", &carneiros[i]);
    }

    int visitadas[N];
    for (int i = 0; i < N; i++) {
        visitadas[i] = 0; 
    }

    int atual = 0;
    int atacadas = 0;

    while (atual >= 0 && atual < N) {
        if (carneiros[atual] > 0) {
            if (visitadas[atual] == 0) {
                atacadas++; 
                visitadas[atual] = 1;
            }

            int antes = carneiros[atual];
            carneiros[atual]--; 

            if (antes % 2 == 0) {
                atual--;
            } else {
                atual++;
            }
        } else {
            if (visitadas[atual] == 0) {
                atacadas++;
                visitadas[atual] = 1;
            }
            break;
        }
    }

    int restantes = 0;
    for (int i = 0; i < N; i++) {
        restantes += carneiros[i];
    }

    printf("%d %d\n", atacadas, restantes);

    return 0;
}
